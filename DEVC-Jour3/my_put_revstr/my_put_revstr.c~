void	my_putchar(char c);

void	my_put_revstr(char *str)
{
  int	i;

  i = 0;
  while (*str != '\0')
    {
      ++i;
      ++str;
    }
  while (i >= 0)
    {
      my_putchar(*str);
      --str;
      --i;
    }
}
