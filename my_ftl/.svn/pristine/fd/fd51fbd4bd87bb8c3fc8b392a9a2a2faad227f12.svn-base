CC =    gcc -g
NAME =  my_ftl
SRC =   ftl.h \
	function.h \
        my_putchar.c \
        my_putstr.c \
        air_shed.c \
        my_strcpy.c \
        my_strncpy.c \
        my_strlen.c \
        my_strstr.c \
        my_strcat.c \
        my_strncat.c \
        my_swap.c \
        my_getnbr.c \
        my_put_nbr.c \
        my_strcmp.c \
        my_strncmp.c \
	readLine.c \
	my_strdup.c \
	container.c \
	system_control.c \
	system_repair.c \
	start.c \
	jump.c \
	game.c \
	battlefield.c \
	attack.c \
	main.c
OBJ =   $(SRC:%.c=%.o)
CFLAGS = -Wall -Wextra
RM =    rm -rf

$(NAME):        $(OBJ)
		$(CC) $(OBJ) -o $(NAME)
all:    	$(NAME) clean

.PHONY: 	all run clean test
clean:
		$(RM) *.o

fclean:         clean
		$(RM) $(NAME)
