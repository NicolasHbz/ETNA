#include <stdio.h>
#include <stdlib.h>
#include "fonction.h"

int	gestionErreurs(int argc, char **argv)
{
  int   i;
  int	temp;

  if (argc != 4)
    return (0);

  if (my_strcmp(argv[2], "classique") == 0)
	version = 0;
      else if (my_strcmp(argv[2], "expert") == 0)
	version = 1;
      else
	return (0);
      i++;
    }
  duree = *argv[4] - 48;
  if (duree % 2 == 0) //gestion argument 2
    return (0);
  return (1);
}
